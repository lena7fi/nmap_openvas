<% content_for :title do %>
  New Host
<% end %>

<% content_for :layout do %>
  <!--begin::Form-->
  <form class="form w-100" novalidate="novalidate" id="kt_password_reset_form" data-kt-redirect-url="/new-password" action="#">
    <!--begin::Heading-->
    <div class="text-center mb-10">
      <!--begin::Title-->
      <h1 class="text-dark fw-bolder mb-3">
        Register new host
      </h1>
      <!--end::Title-->

      <!--begin::Link-->
      <div class="text-gray-500 fw-semibold fs-6">
        Enter host IP.
      </div>
      <!--end::Link-->
    </div>
    <!--begin::Heading-->

    <!--begin::Input group--->
    <div class="fv-row mb-8">
      <!--begin::Email-->
      <input type="text" placeholder="IP" name="ip" autocomplete="off" class="form-control bg-transparent"/>
      <!--end::Email-->
    </div>

    <!--begin::Actions-->
    <div class="d-flex flex-wrap justify-content-center pb-lg-0">
      <button type="button" id="kt_register_host_button" class="btn btn-primary me-4">
        <%= render 'partials/general/button-indicator', label: 'Register' %>
      </button>

      <a href="/hosts" class="btn btn-light">Cancel</a>
    </div>
    <!--end::Actions-->
  </form>
  <!--end::Form-->
<% end %>

<%= render template: "#{Rails.configuration.settings.KT_THEME_LAYOUT_DIR}/default" %>
