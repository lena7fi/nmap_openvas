<% content_for :title do %>
  New Host
<% end %>

<% content_for :layout do %>
  <!--begin::Form-->
  <%= form_with model: @host, class:"form w-100" do |form| %>
    <!--begin::Heading-->
    <div class="text-center mb-10">
      <!--begin::Title-->
      <h1 class="text-dark fw-bolder mb-3">
        Register new host
      </h1>
      <!--end::Title-->

      <!--begin::Link-->
      <div class="text-gray-500 fw-semibold fs-6">
        Enter host IP.
      </div>
      <!--end::Link-->
    </div>
    <!--begin::Heading-->

    <!--begin::Input group--->
    <div class="fv-row mb-8">
      <!--begin::Email-->
      <%= form.text_field :address, class: "form-control bg-transparent", placeholder: "IP" %>
      <!--end::Email-->
    </div>

    <!--begin::Actions-->
    <div class="d-flex flex-wrap justify-content-center pb-lg-0">
      <%= form.submit "Register", class: "btn btn-primary me-4"%>
      <a href="/hosts" class="btn btn-light">Cancel</a>
    </div>
    <!--end::Actions-->
  <% end %>
  <!--end::Form-->
<% end %>

<%= render template: "#{Rails.configuration.settings.KT_THEME_LAYOUT_DIR}/default" %>
